@{
    ViewData["Title"] = "Inicio de Sesion";
}

<div class="container p-4">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <p>Ya has iniciado sesion. Seras redirigido al inicio...</p>
        <script>
            setTimeout(function () {
                window.location.href'@Url.Action("Index", "Home")';
            }, 3000);
        </script>
    }
    else
    {
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-light" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <div class="mb-md-5 mt-md-4 pb-5">
                        <h2 class="fw-bold mb-2 text-uppercase">Iniciar Sesion</h2>
                        <p class="mb-5">Ingresa tu Usuario y Contraseña</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="username">Nombre de Usuario</label>
                                <input id="username" name="username" required type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="password">Contraseña</label>
                                <input id="password" name="password" required type="password" class="form-control" />                                  
                            </div>
                            <br />
                            <button type="submit" class="btn btn-primary">Iniciar Sesion</button>
                        </form>
                    </div>
                        <div>
                            <p class="mb-0">
                                ¿No tienes cuenta? <a class="fw-bold" asp-action="Register">Registrarse</a>
                            </p>
                        </div>
                </div>
            </div>
        </div>
     </div>
    }
</div>
