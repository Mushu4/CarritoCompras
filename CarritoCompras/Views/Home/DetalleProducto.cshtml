@model Producto
@{
    ViewData["Title"] = "Detalle Producto";
}

<div class="container">
    <h2 class="my-4">@Model.Nombre</h2>
    <div class="row">
        <div class="col-md-6">
            <a>*IMAGEN*</a>
        </div>
        <div class="col-md-6">
            <h4>Modelo: @Model.Modelo</h4>
            <p>@Model.Descripcion</p>
            <p>Precio: @String.Format("{0:C}", @Model.Precio)</p>
            <p>Stock: @Model.Stock</p>
            <p>Categoria: @Model.Categoria.Nombre</p>
            @if (Model.Stock < 1)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle"> No Stock</i>
                </div>
            }
            else
            {
                <form method="post" action="@Url.Action("AgregarProductoVistaDetalle")" class="d-flex">
                    <input type="hidden" name="id" , value="@Model.ProductoId" />
                    <input type="number" class="form-control mr-2" name="cantidad" value="1" min="1" max="@Model.Stock" />
                    <button type="submit" class="btn btn-outline-primary rounded-pill"><i class="fas fa-cart-plus"></i></button>
                </form>
            }
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">Volver al inicio</a>
        </div>
    </div>
</div>

